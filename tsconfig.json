{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "@/*": ["*"]
    },
    "baseUrl": "src"
  }
}
